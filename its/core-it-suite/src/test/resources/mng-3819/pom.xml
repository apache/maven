<project>
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.apache.maven.its.mng3819</groupId>
  <artifactId>test</artifactId>
  <version>1.0</version>

  <name>Maven Integration Test :: MNG-3819</name>
  <description>
    Verify that plexus-utils:1.1 is present on plugin class path if plexus-utils is not explicitly declared in
    plugin POM for backward-compat with Maven 2.0.5- (due to MNG-2892, plexus-utils is no longer part of the core
    class realm in Maven 2.0.6+).
  </description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.its.plugins</groupId>
        <artifactId>maven-it-plugin-class-loader</artifactId>
        <version>2.1-SNAPSHOT</version>
        <executions>
          <execution>
            <id>load</id>
            <phase>validate</phase>
            <configuration>
              <!--
              These two classes allow fairly well to tell the version of plexus-utils being used:
              a) CommandLineUtils.killProcess was added in version 1.2
              b) RealmDelegatingClassLoader was deleted in version 1.1
              -->
              <classNames>org.codehaus.plexus.util.cli.CommandLineUtils,org.codehaus.plexus.util.RealmDelegatingClassLoader</classNames>
              <pluginClassLoaderOutput>target/pcl.properties</pluginClassLoaderOutput>
            </configuration>
            <goals>
              <goal>load</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
