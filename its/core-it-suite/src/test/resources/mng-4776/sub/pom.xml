<project>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.apache.maven.its.mng4776</groupId>
    <artifactId>parent</artifactId>
    <version>0.1</version>
  </parent>

  <groupId>org.apache.maven.its.mng4776</groupId>
  <artifactId>sub</artifactId>
  <version>0.1</version>
  <packaging>pom</packaging>

  <name>Maven Integration Test :: MNG-4776 :: Sub</name>
  <description>Verify that missing plugin versions in the POM are resolved for all projects on which a forking aggregator mojo
    will be run and not just the top-level project.</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.its.plugins</groupId>
        <artifactId>maven-it-plugin-log-file</artifactId>
        <!-- NOTE: version intentionally omitted, must be resolved automatically for this project as well -->
        <executions>
          <execution>
            <id>log</id>
            <goals>
              <goal>reset</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <logFile>target/log.txt</logFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
