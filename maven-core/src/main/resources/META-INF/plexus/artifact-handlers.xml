              </test>
              <package>
                org.apache.maven.plugins:maven-ejb3-plugin:ejb3
              </package>
              <install>
                org.apache.maven.plugins:maven-install-plugin:2.3.1:install
              </install>
              <deploy>
                org.apache.maven.plugins:maven-deploy-plugin:2.5:deploy
              </deploy>
            </phases>
            <!-- END SNIPPET: ejb3-lifecycle -->
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>     

