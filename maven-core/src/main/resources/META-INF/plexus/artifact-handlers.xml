        <type>ejb-client</type>
        <extension>jar</extension>
        <packaging>ejb</packaging>
        <classifier>client</classifier>
        <language>java</language>
        <addedToClasspath>true</addedToClasspath>
      </configuration>
    </component>
    <component>
